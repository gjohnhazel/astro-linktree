// Put all your links here
const links: Link[] = [
  {
    desc: "Portfolio",
    link: "johnhazel.com",
    icon: "fa-solid fa-home", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    desc: "My Blog",
    link: "blog.johnhazel.com",
    icon: "fa-solid fa-rss",
  },
  {
    desc: "Church+",
    link: "churchpl.us",
    icon: "fa-solid fa-church",
  },
  {
    desc: "Hazelize",
    link: "hazelize.com",
    icon: "fa-solid fa-laptop-code",
  },
  {
    desc: "Ice Barrel",
    link: "icebarrel.com",
    icon: "fa-solid fa-icicles",
